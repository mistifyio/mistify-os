{
    "dbpath": "/mistify/.agent.db",
    "actions": {
        "restart": {
            "sync": [
                {
                    "method": "Test.Restart",
                    "service": "test"
                }
            ]
        },
        "poweroff":{
            "sync": [
                {
                    "method": "Test.Poweroff",
                    "service": "test"
                }
            ]
        },
        "delete":{
            "async": [
                {
                    "method": "Libvirt.Delete",
                    "service": "libvirt"
                }
            ]
        },
        "create": {
            "async": [
                {
                    "method": "ImageStore.CreateGuestDisks",
                    "service": "storage"
                },
                {
                    "method": "Libvirt.CreateGuest",
                    "service": "libvirt"
                }
            ]
        },
        "run": {
            "async": [
                {
                    "method": "Libvirt.Run",
                    "service": "libvirt"
                }
            ]
        },
        "reboot": {
            "sync": [
                {
                    "method": "Test.Reboot",
                    "service": "test"
                }
            ]
        },
        "shutdown": {
            "sync": [
                {
                    "method": "Test.Shutdown",
                    "service": "test"
                }
            ]
        }
    },
    "metrics": {
        "cpu": {
            "method": "Libvirt.CpuMetrics",
            "service": "libvirt"
        },
        "nic": {
            "method": "Libvirt.NicMetrics",
            "service": "libvirt"
        },
        "disk": {
            "method": "Libvirt.DiskMetrics",
            "service": "libvirt"
        }
    },
    "services": {
        "test": {
            "port": 9999
        },
         "libvirt": {
            "port": 20001
         },
        "storage": {
            "port": 16000
        }
    }
}
