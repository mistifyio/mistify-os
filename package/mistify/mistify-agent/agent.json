{
    "dbpath": "/mistify/.agent.db",
    "actions": {
        "restart": {
            "sync": [
                {
                    "method": "Test.Restart",
                    "service": "test"
                }
            ]
        },
        "poweroff":{
            "sync": [
                {
                    "method": "Test.Poweroff",
                    "service": "test"
                }
            ]
        },
        "delete":{
            "async": [
                {
                    "method": "Libvirt.Delete",
                    "service": "libvirt"
                },
                {
                    "method": "ImageStore.DeleteGuestsDisks",
                    "service": "storage"
                }
            ]
        },
        "create": {
            "async": [
                {
                    "method": "ImageStore.CreateGuestDisks",
                    "service": "storage"
                },
                {
                    "method": "Libvirt.CreateGuest",
                    "service": "libvirt"
                }
            ]
        },
        "run": {
            "async": [
                {
                    "method": "Libvirt.Run",
                    "service": "libvirt"
                }
            ]
        },
        "reboot": {
            "sync": [
                {
                    "method": "Test.Reboot",
                    "service": "test"
                }
            ]
        },
        "shutdown": {
            "sync": [
                {
                    "method": "Test.Shutdown",
                    "service": "test"
                }
            ]
        }
    },
    "metrics": {
        "cpu": {
            "method": "Libvirt.CpuMetrics",
            "service": "libvirt"
        },
        "nic": {
            "method": "Libvirt.NicMetrics",
            "service": "libvirt"
        },
        "disk": {
            "method": "Libvirt.DiskMetrics",
            "service": "libvirt"
        }
    },
    "imageActions":{
        "listImages": {
            "method": "ImageStore.ListImages",
            "service": "storage"
        },
        "getImage": {
            "method": "ImageStore.GetImage",
            "service": "storage"
        },
        "deleteImage": {
            "method": "ImageStore.DeleteImage",
            "service": "storage"
        },
        "fetchImage": {
            "method": "ImageStore.RequestImage",
            "service": "storage"
        },
        "listSnapshots": {
            "method": "ImageStore.ListSnapshots",
            "service": "storage"
        },
        "getSnapshot": {
            "method": "Test.GetSnapshot",
            "service": "storage"
        },
        "createSnapshot": {
            "method": "Test.CreateSnapshot",
            "service": "storage"
        },
        "deleteSnapshot": {
            "method": "Test.DeleteSnapshot",
            "service": "storage"
        },
        "rollbackSnapshot": {
            "method": "Test.DeleteSnapshot",
            "service": "storage"
        },
        "downloadSnapshot": {
            "method": "snapshots/download",
            "service": "storage"
        }
    },
    "services": {
        "test": {
            "port": 9999
        },
        "libvirt": {
            "port": 20001
        },
        "storage": {
            "port": 16000
        }
    }
}
